{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Launch Toki Development terminals",
      "dependsOn": ["toki-app", "docker-postgres", "prisma-studio"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Launch Toki Development terminals without Docker",
      "dependsOn": ["toki-app", "prisma-studio"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "toki-app",
      "type": "shell",
      "command": "pnpm dev",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "docker-postgres",
      "type": "shell",
      "command": "docker compose up",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "prisma-studio",
      "type": "shell",
      "command": "pnpm db:studio-no-browser",
      "isBackground": false,
      "problemMatcher": []
    }
  ]
}
